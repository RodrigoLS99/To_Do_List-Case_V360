<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-lg">
    
    <div class="text-center">
      <h2 class="mt-2 text-3xl font-extrabold text-gray-900">
        Bem-vindo de volta!
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Entre na sua conta para gerenciar suas tarefas
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      
      <% if flash[:alert] %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4">
          <p class="text-sm text-red-700"><%= flash[:alert] %></p>
        </div>
      <% end %>

      <div>
        <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder: "seu@email.com" %>
        </div>
      </div>

      <div data-controller="password-toggle">
        <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700" %>
        
        <div class="mt-1 relative rounded-md shadow-sm">
          <%= f.password_field :password, 
              autocomplete: "current-password", 
              data: { password_toggle_target: "input" },
              class: "appearance-none block w-full px-3 py-2 pr-10 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          
          <button type="button" 
                  data-action="click->password-toggle#toggle"
                  class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-gray-400 hover:text-gray-600 focus:outline-none">
            
            <svg data-password_toggle_target="eyeOpen" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>

            <svg data-password_toggle_target="eyeClosed" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
            </svg>
          </button>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, "Lembrar de mim", class: "ml-2 block text-sm text-gray-900" %>
          </div>
          
          <div class="text-sm">
            <a href="<%= new_password_path(resource_name) %>" class="font-medium text-blue-600 hover:text-blue-500">
              Esqueceu a senha?
            </a>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.submit "Entrar", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer transition duration-150 ease-in-out" %>
      </div>
    <% end %>

    <div class="text-center mt-4 border-t pt-4">
      <p class="text-sm text-gray-600">
        NÃ£o tem uma conta?
        <a href="<%= new_registration_path(resource_name) %>" class="font-medium text-blue-600 hover:text-blue-500">
          Cadastre-se gratuitamente
        </a>
      </p>
    </div>

  </div>
</div>