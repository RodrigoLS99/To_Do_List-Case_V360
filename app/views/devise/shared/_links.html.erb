<div class="space-y-3 text-center">
  
  <%- if controller_name != 'sessions' %>
    <%= link_to "Já tem uma conta? Entrar", new_session_path(resource_name), class: "block text-sm font-medium text-blue-600 hover:text-blue-800 hover:underline transition duration-150 ease-in-out" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Criar nova conta", new_registration_path(resource_name), class: "block text-sm font-medium text-blue-600 hover:text-blue-800 hover:underline transition duration-150 ease-in-out" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "block text-sm font-medium text-gray-500 hover:text-blue-600 transition duration-150 ease-in-out" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Não recebeu o e-mail de confirmação?", new_confirmation_path(resource_name), class: "block text-sm font-medium text-gray-500 hover:text-blue-600 transition duration-150 ease-in-out" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name), class: "block text-sm font-medium text-gray-500 hover:text-blue-600 transition duration-150 ease-in-out" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mt-2" %>
    <% end %>
  <% end %>
</div>