<div class="mt-6 space-x-4">
  <% if user_signed_in? %>
    <p class="text-green-600 font-semibold mb-2">
      Olá, <%= current_user.name || current_user.email %>!
    </p>
    
    <%= link_to "Sair", destroy_user_session_path, data: { turbo_method: :delete }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  <% else %>
    <p class="text-gray-600 mb-2">Você não está logado.</p>
    
    <%= link_to "Entrar", new_user_session_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    
    <%= link_to "Cadastrar", new_user_registration_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>