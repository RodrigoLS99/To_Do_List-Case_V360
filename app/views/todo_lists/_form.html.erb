<%= form_with(model: todo_list, class: "contents") do |form| %>
  
  <%# --- BLOCO DE ERROS (Estilo Unificado) --- %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-md shadow-sm">
      <h2 class="text-red-800 font-bold text-sm mb-2 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
        Não foi possível salvar esta lista:
      </h2>

      <ul class="list-disc list-inside text-sm text-red-700 ml-1">
        <% todo_list.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# --- CAMPO TÍTULO --- %>
  <div class="my-6">
    <%= form.label :title, "Nome da Lista", class: "block text-sm font-medium text-gray-700 mb-1" %>
    
    <%= form.text_field :title, 
        placeholder: "Ex: Compras do Mês, Ideias de Projeto...", 
        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-3 px-4" %>
        
    <p class="mt-1 text-xs text-gray-500">Escolha um nome curto para identificar suas tarefas.</p>
  </div>

  <%# --- BOTÕES DE AÇÃO --- %>
  <div class="flex items-center gap-3 mt-8">
    <%= form.submit "Salvar Lista", class: "rounded-lg py-2.5 px-5 bg-blue-600 hover:bg-blue-700 text-white font-medium cursor-pointer transition shadow-sm" %>
    
    <%= link_to "Cancelar", todo_lists_path, class: "text-gray-600 hover:text-gray-900 text-sm font-medium px-3 py-2" %>
  </div>
<% end %>